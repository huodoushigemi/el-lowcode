{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowJs": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,

    "paths": {
      "@el-lowcode/render": ["./packages/render/index.ts"],
      "@el-lowcode/render-drag": ["./packages/render-drag/index.ts"],
      "@el-lowcode/crud": ["./packages/crud/index.ts"],
      "@el-lowcode/utils": ["./packages/utils/index.ts"],
      "@el-lowcode/designer": ["./packages/designer/index.ts"],
    },
  },
  "include": ["packages", "designer", "plugins"],
  "exclude": ["node_modules", "**/dist"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
